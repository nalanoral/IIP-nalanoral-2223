<Window x:Class="DemoWpfSliderRectangle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoWpfSliderRectangle"
        mc:Ignorable="d"
        Title="WPF Controls Demo - Slider &amp; Rectangle " Height="300" Width="600" Background="#FFF3F1D7">
    <Grid>
        <Label x:Name="lblValue" Content="100" HorizontalAlignment="Left" Margin="44,232,0,0" VerticalAlignment="Top"/>
        <Rectangle x:Name="rct1" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="100" Margin="44,60,0,0" Stroke="Black" VerticalAlignment="Top" Width="100"/>
        <Slider x:Name="sld1" Minimum="0" Value="100" Maximum="255" IsSnapToTickEnabled="True" TickFrequency="10" HorizontalAlignment="Left" Margin="36,198,0,0" VerticalAlignment="Top" Width="521" ValueChanged="sld1_ValueChanged"/>
    </Grid>
</Window>
