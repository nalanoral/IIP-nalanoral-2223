<Window x:Class="DemoWpfTextBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoWpfTextBox"
        mc:Ignorable="d"
        Title="WPF Controls Demo - TextBox" Height="300" Width="600" Background="#FFF3F1D7">
    <Grid>
        <Label x:Name="lblMessage" Content="..." HorizontalAlignment="Left" Margin="27,20,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txt1" HorizontalAlignment="Left" Height="23" Margin="35,61,0,0" TextWrapping="NoWrap" Text="this is a single line TextBox" VerticalAlignment="Top" Width="198"/>
        <TextBox x:Name="txt2" HorizontalAlignment="Left" Height="96" Margin="35,101,0,0" TextWrapping="Wrap" Text="use the TextWrapping property set to Wrap to wrap texts on multiple lines" VerticalAlignment="Top" Width="198"/>
        <Button x:Name="btn1" Content="click me" HorizontalAlignment="Left" Margin="35,212,0,0" VerticalAlignment="Top" Width="75" Click="btn1_Click"/>

    </Grid>
</Window>
