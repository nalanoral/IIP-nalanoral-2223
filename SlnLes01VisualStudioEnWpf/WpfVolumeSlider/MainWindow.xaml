<Window x:Class="WpfVolumeSlider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfVolumeSlider"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="800">
    <Grid Background="LightBlue" Margin="0,0,0,0" >
        <Label x:Name="lblSliderValue" Content="0" HorizontalAlignment="Left" Height="38" Margin="205,62,0,0" VerticalAlignment="Top" Width="80" FontWeight="Bold"/>
        <Slider x:Name="sldVolume" HorizontalAlignment="Left" Height="16" Margin="45,34,0,0" VerticalAlignment="Top" Width="487" FontSize="14"  TickFrequency="5" Value="50" ValueChanged="sldVolume_ValueChanged" IsSnapToTickEnabled="True" Minimum="0" Maximum="100"/>
    </Grid>
</Window>
