<Window x:Class="DemoWpfListBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoWpfListBox"
        mc:Ignorable="d"
        Title="WPF Controls Demo - ListBox" Height="300" Width="600" Background="#FFF3F1D7">
    <Grid>
        <Label x:Name="lblMessage" Content="..." HorizontalAlignment="Left" Margin="27,20,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="lbxShopping" HorizontalAlignment="Left" Height="114" Margin="27,63,0,0" VerticalAlignment="Top" Width="290" SelectionChanged="lbxShopping_SelectionChanged">
            <ListBoxItem Content="Brood"/>
            <ListBoxItem Content="Eieren"/>
            <ListBoxItem Content="Kaas"/>
            <ListBoxItem Content="Houmous"/>
        </ListBox>
    </Grid>
</Window>
